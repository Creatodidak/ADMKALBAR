<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PenilaianTunggal">

    <androidx.cardview.widget.CardView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#151515"
        app:cardBackgroundColor="#151515"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/ubold"
                android:text="KATA SCORING SYSTEM"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="by ADM Karate Kalimantan Barat"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#DC1616"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/akanama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="Anggi Perianto"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/akateam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="Yamarashi Dojo"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:background="#79FFFFFF"
                        app:columnCount="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/tekniklbaka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TEKNIK"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/teknikaka"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:maxLength="2"
                                android:fontFamily="@font/ubold"
                                android:gravity="center_horizontal"
                                android:inputType="number"
                                android:singleLine="true"
                                android:hint="00"
                                android:textColorHint="#8E8E8E"
                                android:textColor="@color/black"
                                android:textSize="75sp"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/atletiklbaka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ATLETIK"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/atletikaka"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:maxLength="2"
                                android:fontFamily="@font/ubold"
                                android:gravity="center_horizontal"
                                android:inputType="number"
                                android:singleLine="true"
                                android:hint="00"
                                android:textColor="@color/black"
                                android:textSize="75sp"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>
                    </androidx.gridlayout.widget.GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="9dp"
                app:cardBackgroundColor="#F8DE91"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/ubold"
                        android:gravity="center"
                        android:text="PERINGATAN!"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/ureg"
                        android:gravity="center"
                        android:text="Dilarang menggunakan angka ganjil dalam memberikan penilaian"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#007AD7"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/aonama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="Anggi Perianto"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/aoteam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="Yamarashi Dojo"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:background="#79FFFFFF"
                        app:columnCount="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/tekniklbao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TEKNIK"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/teknikao"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:maxLength="2"
                                android:fontFamily="@font/ubold"
                                android:gravity="center_horizontal"
                                android:inputType="number"
                                android:singleLine="true"
                                android:hint="00"
                                android:textColor="@color/black"
                                android:textSize="75sp"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/atletiklbao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ATLETIK"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/atletikao"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:maxLength="2"
                                android:fontFamily="@font/ubold"
                                android:gravity="center_horizontal"
                                android:inputType="number"
                                android:singleLine="true"
                                android:hint="00"
                                android:textColor="@color/black"
                                android:textSize="75sp"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>
                    </androidx.gridlayout.widget.GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/inputBt"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/ubold"
                android:gravity="center"
                android:text="INPUT NILAI"
                android:textSize="18sp"
                app:backgroundTint="#FFC107" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>